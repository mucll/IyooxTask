    <include layout="@layout/layout_title_bar_all" />

    <LinearLayout
        android:id="@+id/reset_password_ll"
        style="@style/person_details_layout_style"
        android:layout_marginBottom="@dimen/dip_8"
        android:layout_marginTop="@dimen/dip_8"
        android:background="@drawable/select_white_bg">

        <TextView
            style="@style/person_details_layout_tv_style"
            android:text="修改密码" />

        <TextView
            style="@style/person_details_layout_tv_style"
            android:layout_marginRight="@dimen/dip_16"
            android:layout_weight="1"
            android:drawableRight="@drawable/homework_finished_forward"
            android:gravity="right|center_vertical"
            android:textColor="@color/color999"
            android:textSize="@dimen/f_15" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="8dp">

        <TextView
            style="@style/person_details_layout_tv_style"
            android:text="消息提醒" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_05" />

    <RelativeLayout
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:background="@drawable/select_white_bg"
        android:clickable="true"
        android:paddingLeft="@dimen/dip_16"
        android:paddingRight="@dimen/dip_16"
        android:visibility="visible">

        <TextView
            style="@style/person_details_layout_tv_style"
            android:layout_centerVertical="true"
            android:text="清除缓存" />

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_next_black"
            android:text="0M"
            android:textColor="@color/black_54"
            android:textSize="@dimen/f_13" />
    </RelativeLayout>

    <View
