<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:id="@+id/back_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/menu_back"
                android:layout_width="@dimen/dip_44"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/select_white_bg"
                android:src="@drawable/icon_back_black"
                android:visibility="visible" />


            <TextView
                android:id="@+id/title_bar_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="24dp"
                android:background="@color/trans"
                android:clickable="false"
                android:ellipsize="middle"
                android:gravity="left|center_vertical"
                android:maxWidth="@dimen/dip_200"
                android:singleLine="true"
                android:textColor="@color/black_87"
                android:textSize="@dimen/f_18" />

            <Chronometer
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dip_8"
                android:format="%s"
                android:textColor="@color/color333"
                android:textSize="@dimen/f_14"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dip_16"
                android:ellipsize="middle"
                android:gravity="center"
                android:maxWidth="@dimen/dip_100"
                android:singleLine="true"
                android:textColor="@drawable/select_enable_text_color"
                android:textSize="@dimen/f_14"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/title_bar_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dip_12"
                android:padding="@dimen/dip_4"
                android:src="@drawable/home_manage_teacher"
                android:visibility="invisible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/coloreeee" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>