<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_60"
        android:background="@drawable/select_f7_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/student_indexof_tv"
            android:layout_width="@dimen/dip_32"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_16"
            android:gravity="center"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_12" />

        <LinearLayout
            android:layout_width="@dimen/dip_120"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dip_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/student_icon_iv"
                android:layout_width="@dimen/dip_40"
                android:layout_height="@dimen/dip_40"/>

            <TextView
                android:id="@+id/task_detail_student_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_8"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color333"
                android:textSize="@dimen/f_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/task_detail_rate_tv"
            android:layout_width="@dimen/dip_80"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_18" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/next_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dip_16"
            android:src="@drawable/homework_finished_forward" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black_12" />
</LinearLayout>