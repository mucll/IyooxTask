<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/item_ranking_tv"
        android:layout_width="@dimen/dip_60"
        android:layout_height="@dimen/dip_60"
        android:gravity="center"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_13" />

    <TextView
        android:id="@+id/item_student_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dip_36"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_13" />

    <TextView
        android:id="@+id/item_score"
        android:layout_width="@dimen/dip_105"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_13" />
</LinearLayout>
