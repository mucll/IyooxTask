<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf0"
    android:orientation="vertical"
    tools:context=".activity.TaskResultActivity">

    <include layout="@layout/layout_title_bar_all" />

    <ScrollView
        android:id="@+id/task_result_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/item_answer_total_analysis_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_2" />

            <include
                layout="@layout/item_answer_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_8" />

            <include
                layout="@layout/item_answer_knowledge_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_8" />

            <include
                layout="@layout/item_answer_suggest_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_8" />

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ex_right_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_48">

        <Button
            android:id="@+id/result_analysis_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_maincolor_bg"
            android:text="查看答案解析"
            android:textColor="@color/white"
            android:textSize="@dimen/f_16" />

        <Button
            android:id="@+id/refresh_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_f7_bg"
            android:text="继续学习课程"
            android:textColor="@color/color666"
            android:textSize="@dimen/f_16" />
    </LinearLayout>
</LinearLayout>