<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf7"
    android:orientation="vertical"
    tools:context=".fragment.teacher.TeacherClassFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/maincolor"
        android:orientation="vertical">

        <View
            android:id="@+id/tab_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_24"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">


            <TextView
                android:id="@+id/title_bar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dip_4"
                android:padding="@dimen/dip_8"
                android:textColor="@color/white"
                android:textSize="@dimen/f_18" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dip_16">
        <!--一课一练-->
        <LinearLayout
            android:id="@+id/teacher_create_task_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_100"
            android:background="@drawable/select_white_bg"
            android:elevation="@dimen/dip_1"
            android:orientation="horizontal"
            android:translationZ="@dimen/dip_1">

            <RelativeLayout
                android:layout_width="@dimen/dip_100"
                android:layout_height="@dimen/dip_100">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/setting_work_pic_practice" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_20"
                android:layout_marginTop="@dimen/dip_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一课一练"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_18" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_12"
                    android:text="细分章节与考点,节节突破,实时掌握学期"
                    android:textColor="@color/color999"
                    android:textSize="@dimen/f_12" />
            </LinearLayout>

        </LinearLayout>
        <!--试卷-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_100"
            android:layout_marginTop="@dimen/dip_16"
            android:background="@drawable/select_white_bg"
            android:elevation="@dimen/dip_1"
            android:orientation="horizontal"
            android:translationZ="@dimen/dip_1"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="@dimen/dip_100"
                android:layout_height="@dimen/dip_100">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/setting_work_pic_test" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_20"
                android:layout_marginTop="@dimen/dip_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="试卷-综合测验"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_18" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_12"
                    android:text="重难点考察,精选题目,全面考察学生章节掌握情况"
                    android:textColor="@color/color999"
                    android:textSize="@dimen/f_12" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>