<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.student.StudentCollectActivity">

    <include layout="@layout/layout_title_bar_all" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_54"
        android:layout_marginTop="@dimen/dip_8"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/teacher_grade_name_tv"
            style="@style/person_details_layout_tv_style"
            android:paddingLeft="@dimen/dip_16" />

        <EditText
            android:id="@+id/teacher_create_class_name"
            style="@style/person_details_layout_tv_style"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="给班级起个名字吧(2-8个字符)"
            android:maxLength="8"
            android:paddingRight="@dimen/dip_16"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_15" />
    </LinearLayout>
</LinearLayout>