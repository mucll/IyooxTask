<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/ll_subject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subject"
                    style="@style/search_menu_tab_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/img_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dip_10"
                    android:src="@drawable/more_unfold_black"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:id="@+id/one_underline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_2"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dip_2"
                android:layout_marginRight="@dimen/dip_2"
                android:background="@color/main_text_color"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="0.7dp"
            android:layout_height="@dimen/dip_16"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/ll_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/comprehensive_sorting"
                    style="@style/search_menu_tab_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/img_cs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dip_10"
                    android:src="@drawable/more_unfold_black"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:id="@+id/two_underline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_2"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dip_2"
                android:layout_marginRight="@dimen/dip_2"
                android:background="@color/main_text_color"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="0.7dp"
            android:layout_height="@dimen/dip_16"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/ll_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_select"
                    style="@style/search_menu_tab_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/img_sc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dip_10"
                    android:src="@drawable/more_unfold_black"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:id="@+id/three_underline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_2"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dip_2"
                android:layout_marginRight="@dimen/dip_2"
                android:background="@color/main_text_color"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_tab"
        android:background="#20000000"></RelativeLayout>
</RelativeLayout>

