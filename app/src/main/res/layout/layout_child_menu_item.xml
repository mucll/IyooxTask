<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_48"
    android:background="@drawable/select_white_bg"
    android:minHeight="@dimen/dip_48"
    android:paddingLeft="@dimen/dip_16"
    android:paddingRight="@dimen/dip_16">

    <TextView
        android:id="@+id/child_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_gey"
        android:textSize="@dimen/f_15" />

    <ImageView
        android:id="@+id/item_select_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/select_checkbox_onlyone" />
</RelativeLayout>
