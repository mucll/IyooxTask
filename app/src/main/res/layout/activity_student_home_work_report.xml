<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ceebb4"
    android:orientation="vertical"
    tools:context=".activity.TaskResultActivity">

    <include layout="@layout/layout_title_bar_all" />

    <ScrollView
        android:id="@+id/home_work_report_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_24"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/task_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/comment_work_details_icon_title"
                    android:drawablePadding="@dimen/dip_8"
                    android:gravity="center"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_1"
                    android:layout_marginTop="@dimen/dip_2"
                    android:background="#3C608D" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_12"
                android:layout_marginTop="@dimen/dip_12"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_40"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/homework_jsdp_icon_bzsj"
                        android:drawablePadding="@dimen/dip_8"
                        android:text="布置时间"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_12" />

                    <TextView
                        android:id="@+id/start_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_26"
                        android:layout_marginTop="@dimen/dip_12"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_12"
                        android:drawableLeft="@drawable/homework_jsdp_icon_jzsj"
                        android:drawablePadding="@dimen/dip_8"
                        android:text="截止时间"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_12" />

                    <TextView
                        android:id="@+id/end_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_26"
                        android:layout_marginTop="@dimen/dip_12"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_40"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/homework_jsdp_icon_zylx"
                        android:drawablePadding="@dimen/dip_8"
                        android:text="科目名称"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_12" />

                    <TextView
                        android:id="@+id/stubject_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_26"
                        android:layout_marginTop="@dimen/dip_12"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_12"
                        android:drawableLeft="@drawable/homework_jsdp_icon_zysl"
                        android:drawablePadding="@dimen/dip_8"
                        android:text="题目数量"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_12" />

                    <TextView
                        android:id="@+id/timu_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_26"
                        android:layout_marginTop="@dimen/dip_12"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_15" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_16"
                android:layout_marginRight="@dimen/dip_16"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dip_24">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_24"
                    android:drawableLeft="@drawable/homework_jsdp_icon_ztbx"
                    android:text="孩子的总体表现"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_16"
                    android:layout_marginRight="@dimen/dip_16"
                    android:layout_marginTop="@dimen/dip_24"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="完成状态"
                        android:textColor="@color/color666"
                        android:textSize="@dimen/f_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="正确率"
                        android:textColor="@color/color666"
                        android:textSize="@dimen/f_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="班级平均正确率"
                        android:textColor="@color/color666"
                        android:textSize="@dimen/f_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_16"
                    android:layout_marginRight="@dimen/dip_16"
                    android:layout_marginTop="@dimen/dip_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/task_rate_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_16" />

                    <TextView
                        android:id="@+id/task_correct_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_16" />

                    <TextView
                        android:id="@+id/task_class_correct_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_16" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dip_10"
                android:layout_marginLeft="@dimen/dip_16"
                android:layout_marginRight="@dimen/dip_16"
                android:layout_marginTop="@dimen/dip_10"
                android:background="@color/colorf7"
                android:orientation="vertical"
                android:padding="@dimen/dip_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_4"
                        android:drawableLeft="@drawable/stl_dtbg_icon_dtk"
                        android:drawablePadding="@dimen/dip_10"
                        android:text="@string/item_answer_card_text"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_16" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/dip_8"
                    android:layout_marginTop="@dimen/dip_8"
                    android:layout_weight="1">

                    <com.huisu.iyoox.views.EbagGridView
                        android:id="@+id/item_task_result_grid_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:numColumns="5"
                        android:verticalSpacing="@dimen/dip_12" />
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black_12" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item_answer_card_hint_text"
                        android:textSize="@dimen/f_11" />

                    <TextView
                        android:id="@+id/item_answer_card_error_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@drawable/shape_oval_exercises_error_color_8dp"
                        android:drawablePadding="@dimen/dip_4"
                        android:text="@string/error_text"
                        android:textSize="@dimen/f_11" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dip_8"
                        android:layout_toLeftOf="@id/item_answer_card_error_tv"
                        android:drawableLeft="@drawable/shape_oval_exercises_right_color_8dp"
                        android:drawablePadding="@dimen/dip_4"
                        android:text="@string/success_text"
                        android:textSize="@dimen/f_11" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_result_jianyi_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dip_16"
                android:layout_marginRight="@dimen/dip_16"
                android:background="@color/colorf7"
                android:orientation="vertical"
                android:padding="@dimen/dip_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dip_12"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_4"
                        android:drawableLeft="@drawable/homework_jsdp_icon_jspy"
                        android:drawablePadding="@dimen/dip_10"
                        android:text="老师评语"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/f_16" />
                </LinearLayout>

                <TextView
                    android:id="@+id/task_result_jianyi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dip_12"
                    android:layout_marginLeft="@dimen/dip_24"
                    android:layout_marginRight="@dimen/dip_24"
                    android:textColor="@color/color666"
                    android:textSize="@dimen/f_14" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>