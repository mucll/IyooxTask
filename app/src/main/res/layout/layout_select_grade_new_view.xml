<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_320_pad"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dip_16"
            android:paddingRight="@dimen/dip_16">

            <com.huisu.iyoox.views.EbagGridView
                android:id="@+id/grade_new_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dip_16"
                android:gravity="center"
                android:horizontalSpacing="@dimen/dip_12"
                android:numColumns="2"
                android:verticalSpacing="@dimen/dip_12" />
        </FrameLayout>

        <RadioGroup
            android:id="@+id/radio_group_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dip_4"
            android:orientation="horizontal"
            android:padding="2dp">

            <RadioButton
                android:layout_width="@dimen/dip_90"
                android:layout_height="@dimen/dip_32"
                android:background="@drawable/select_radio_btn_left"
                android:button="@null"
                android:gravity="center"
                android:text="小学"
                android:textColor="@drawable/select_radiobutton_text_select"
                android:textSize="@dimen/f_16" />

            <RadioButton
                android:layout_width="@dimen/dip_90"
                android:layout_height="@dimen/dip_32"
                android:background="@drawable/select_radio_btn_right"
                android:button="@null"
                android:gravity="center"
                android:text="中学"
                android:textColor="@drawable/select_radiobutton_text_select"
                android:textSize="@dimen/f_16" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
