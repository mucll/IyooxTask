<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/student_cache_empty_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user_download_wu" />

    <TextView
        android:id="@+id/student_cache_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/student_cache_empty_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dip_30"
        android:text="@string/student_video_cache_empty_text"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/student_cache_empty_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dip_10"
        android:text="@string/student_video_cache_empty_hint_text"
        android:textColor="@color/color999"
        android:textSize="@dimen/f_10" />

</LinearLayout>