<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_76"
        android:layout_marginLeft="@dimen/dip_8"
        android:layout_marginRight="@dimen/dip_8"
        android:layout_marginTop="@dimen/dip_8"
        android:background="@drawable/select_white_r4_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_msg_icon_iv"
            android:layout_width="@dimen/dip_60"
            android:layout_height="@dimen/dip_60"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dip_8"
            android:src="@drawable/homework_yu" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dip_8"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_msg_name_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dip_13"
                    android:layout_weight="1"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_16" />

                <TextView
                    android:id="@+id/task_start_time_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dip_16"
                    android:textColor="@color/color999"
                    android:textSize="@dimen/f_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_msg_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_6"
                android:layout_marginRight="@dimen/dip_16"
                android:layout_marginTop="@dimen/dip_8"
                android:textColor="@color/color999"
                android:textSize="@dimen/f_12" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>