<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/home_banner_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloreeee"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/home_page_radio_group"
                android:layout_width="0dp"
                android:layout_height="@dimen/dip_48"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dip_20"
                android:paddingRight="@dimen/dip_20">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/select_home_page_radio_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="关于我们"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_13" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/select_home_page_radio_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="强大师资"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_13" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/select_home_page_radio_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="服务承诺"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_13" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/dip_8"
                android:drawableRight="@drawable/homework_finished_forward"
                android:gravity="center"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_16"
                android:text="更多"
                android:textColor="@color/color333"
                android:textSize="@dimen/f_13" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/home_page_content_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_120"
            android:background="@color/colorf7" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_8"
            android:background="@color/coloreeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dip_10"
            android:paddingLeft="@dimen/dip_16"
            android:paddingRight="@dimen/dip_16"
            android:paddingTop="@dimen/dip_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_16"
                android:text="课程推荐"
                android:textColor="@color/color333"
                android:textSize="@dimen/f_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/dip_10"
                    android:src="@drawable/home_page_1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/home_page_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_8"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/dip_10"
                    android:src="@drawable/home_page_3" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/home_page_4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_8"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/dip_10"
                    android:src="@drawable/home_page_5" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/home_page_6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_8"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/dip_10"
                    android:src="@drawable/home_page_7" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/home_page_8" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dip_8"
                android:layout_height="@dimen/dip_2"
                android:background="@color/ccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_8"
                android:layout_marginRight="@dimen/dip_8"
                android:text="暂时就只有这些了哦"
                android:textColor="@color/color999"
                android:textSize="@dimen/f_12" />

            <View
                android:layout_width="@dimen/dip_8"
                android:layout_height="@dimen/dip_2"
                android:background="@color/ccc" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>