<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf7"
    android:orientation="vertical"
    tools:context=".activity.VipBuyDetailActivity">

    <include layout="@layout/layout_title_bar_all" />

    <TextView
        android:id="@+id/goods_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_16"
        android:layout_marginTop="@dimen/dip_16"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_140"
        android:layout_marginBottom="@dimen/dip_8"
        android:layout_marginLeft="@dimen/dip_16"
        android:layout_marginRight="@dimen/dip_16"
        android:layout_marginTop="@dimen/dip_8"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_learning_card_bg_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/learning_card_shi" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dip_16">

            <TextView
                android:id="@+id/item_learning_card_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_16"
                android:text="尚课啦全站通学习卡"
                android:textColor="@color/white"
                android:textSize="@dimen/f_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_learning_card_type_name"
                android:layout_marginTop="@dimen/dip_16"
                android:text="有效期内可无限观看海量视频"
                android:textColor="@color/white"
                android:textSize="@dimen/f_12" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dip_16">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/learning_card_tag" />

                <TextView
                    android:id="@+id/vip_card_tag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="试用卡"
                    android:textColor="@color/holo_red_light"
                    android:textSize="@dimen/f_14" />
            </RelativeLayout>

            <TextView
                android:id="@+id/vip_card_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dip_8"
                android:layout_marginRight="@dimen/dip_16"
                android:textColor="@color/color333"
                android:textSize="@dimen/f_10" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_4"
        android:background="@color/coloreddd" />

    <RadioGroup
        android:id="@+id/radio_group_price"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:layout_marginTop="@dimen/dip_16"
            android:button="@null"
            android:drawableLeft="@drawable/ali_pay"
            android:drawablePadding="@dimen/dip_16"
            android:drawableRight="@drawable/select_check_box_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dip_16"
            android:paddingRight="@dimen/dip_16"
            android:text="支付宝支付" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:layout_marginTop="@dimen/dip_16"
            android:button="@null"
            android:drawableLeft="@drawable/weichat_pay"
            android:drawablePadding="@dimen/dip_16"
            android:drawableRight="@drawable/select_check_box_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dip_16"
            android:paddingRight="@dimen/dip_16"
            android:text="支付宝支付" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_44"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/goods_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dip_16"
                android:textSize="@dimen/f_18" />
        </RelativeLayout>

        <TextView
            android:id="@+id/submit_tv"
            android:layout_width="@dimen/dip_100"
            android:layout_height="match_parent"
            android:background="@color/holo_red_light"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@color/white"
            android:textSize="@dimen/f_18" />
    </LinearLayout>
</LinearLayout>