<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_white_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_grade_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dip_8"
        android:src="@drawable/reg_grade_9" />

    <TextView
        android:id="@+id/item_select_grade_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dip_30"
        android:drawableRight="@drawable/select_checkbox_onlyone"
        android:padding="@dimen/dip_12"
        android:text="一年级"
        android:textColor="@color/black_87"
        android:textSize="@dimen/f_18" />
</RelativeLayout>