<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_exercises_number_tv"
        android:layout_width="@dimen/dip_32"
        android:layout_height="@dimen/dip_40"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/color666"
        android:textSize="@dimen/f_16" />

    <TextView
        android:id="@+id/item_exercises_number_answer_tv"
        android:layout_width="@dimen/dip_40"
        android:layout_height="@dimen/dip_40"
        android:background="@drawable/shape_oval_exercises_right_color_8dp"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/white"
        android:textSize="@dimen/f_14" />

</LinearLayout>