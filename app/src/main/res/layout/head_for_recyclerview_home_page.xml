<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/home_banner2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coloreeee"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/home_page_radio_group"
            android:layout_width="0dp"
            android:layout_height="@dimen/dip_48"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dip_20"
            android:paddingRight="@dimen/dip_20">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_home_page_radio_bg"
                android:button="@null"
                android:gravity="center"
                android:text="关于我们"
                android:textColor="@color/color333"
                android:textSize="@dimen/f_13" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_home_page_radio_bg"
                android:button="@null"
                android:gravity="center"
                android:text="强大师资"
                android:textColor="@color/color333"
                android:textSize="@dimen/f_13" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_home_page_radio_bg"
                android:button="@null"
                android:gravity="center"
                android:text="服务承诺"
                android:textColor="@color/color333"
                android:textSize="@dimen/f_13" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="@dimen/dip_8"
            android:drawableRight="@drawable/homework_finished_forward"
            android:gravity="center"
            android:paddingLeft="@dimen/dip_10"
            android:paddingRight="@dimen/dip_16"
            android:text="更多"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_13" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/home_page_new_content_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_120"
        android:background="@color/colorf7" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_8"
        android:background="@color/coloreeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dip_16"
        android:paddingRight="@dimen/dip_16"
        android:paddingTop="@dimen/dip_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程推荐"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_16" />
    </LinearLayout>
</LinearLayout>