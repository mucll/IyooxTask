<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/version_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/down_load_version"
            android:paddingBottom="@dimen/dip_50"
            android:paddingLeft="@dimen/dip_16"
            android:text="确定要删除吗"
            android:textColor="@color/black_70"
            android:textSize="@dimen/f_14" />

        <LinearLayout
            android:id="@+id/dialog_down_load_select"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dip_40"
            android:layout_alignBottom="@id/version_message_tv"
            android:layout_marginBottom="@dimen/dip_6"
            android:layout_marginLeft="@dimen/dip_6"
            android:layout_marginRight="@dimen/dip_6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_btn"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/select_changheader_bottom_btn_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black_54"
                android:textSize="@dimen/f_14" />

            <TextView
                android:id="@+id/right_btn"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/select_changheader_bottom_btn_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/btn_blue_normal"
                android:textSize="@dimen/f_14" />
        </LinearLayout>

        <View
            android:id="@+id/dialog_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@id/dialog_down_load_select"
            android:layout_marginLeft="@dimen/dip_8"
            android:layout_marginRight="@dimen/dip_8"
            android:background="@color/black_12" />
    </RelativeLayout>
</RelativeLayout>