<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_60"
        android:background="@color/colorf7"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/teacher_class_details_position_tv"
            android:layout_width="@dimen/dip_32"
            android:layout_height="@dimen/dip_32"
            android:layout_marginLeft="@dimen/dip_16"
            android:gravity="center"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_14" />

        <ImageView
            android:id="@+id/teacher_class_details_student_head_iv"
            android:layout_width="@dimen/dip_40"
            android:layout_height="@dimen/dip_40" />

        <TextView
            android:id="@+id/teacher_class_details_student_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_16"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_16" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black_12" />
</LinearLayout>