<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dip_20"
    android:layout_marginRight="@dimen/dip_20"
    android:padding="22dp">

    <ImageView
        android:id="@+id/load_app_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/down_load_version"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/load_app_iv"
        android:layout_marginBottom="@dimen/dip_6"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dip_8"
            android:layout_marginTop="@dimen/dip_8"
            android:gravity="center"
            android:text="正在下载最新版本"
            android:textColor="@color/black_87"
            android:textSize="@dimen/f_18" />


        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_12"
            android:layout_marginRight="@dimen/dip_12"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dip_12"
            android:layout_marginRight="@dimen/dip_12"
            android:layout_marginTop="@dimen/dip_8"
            android:background="@drawable/select_white_bg"
            android:gravity="center"
            android:minHeight="38.0dip"
            android:text="正在下载"
            android:textColor="#ff464646"
            android:textSize="@dimen/f_14" />
    </LinearLayout>
</RelativeLayout>