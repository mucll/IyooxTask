<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.student.StudentAddClassRoomActivity">

    <include layout="@layout/layout_title_bar_all" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_12"
        android:background="@color/white">

        <EditText
            android:id="@+id/student_add_class_room_et"
            style="@style/person_details_layout_tv_style"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/student_add_class_room_hint_text"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/dip_16"
            android:paddingRight="@dimen/dip_16"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_15" />
    </LinearLayout>
</LinearLayout>