<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_4"
            android:layout_marginRight="@dimen/dip_4"
            android:src="@drawable/btn_selected_check"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/subject_content_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/subject_icon_iv"
                android:layout_width="@dimen/dip_30"
                android:layout_height="@dimen/dip_30"
                android:src="@drawable/subject_yu" />

            <TextView
                android:id="@+id/subject_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_8"
                android:text="语文"
                android:textColor="@color/color333"
                android:textSize="@dimen/f_13" />
        </LinearLayout>

        <ImageView
            android:id="@+id/subject_is_select_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_4"
            android:layout_marginRight="@dimen/dip_4"
            android:src="@drawable/btn_selected_check"
            android:visibility="invisible" />

    </LinearLayout>
</RelativeLayout>