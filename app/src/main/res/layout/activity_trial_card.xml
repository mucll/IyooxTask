<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/traceroute_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf7"
    android:orientation="vertical"
    tools:context=".activity.student.TrialCardActivity">

    <include layout="@layout/layout_maincolor_title_bar_all" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_4"
                android:background="@color/coloreddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dip_16"
                android:paddingRight="@dimen/dip_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_16"
                    android:text="推荐人激活"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_18" />

                <EditText
                    android:id="@+id/trial_card_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_40"
                    android:layout_marginBottom="@dimen/dip_8"
                    android:layout_marginTop="@dimen/dip_8"
                    android:background="@drawable/shape_trial_card_r10px"
                    android:gravity="center"
                    android:hint="请输入推荐人手机号(若有)"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_15" />

                <TextView
                    android:id="@+id/phone_submit_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dip_16"
                    android:layout_marginTop="@dimen/dip_16"
                    android:background="@drawable/shape_maincolor_r10px"
                    android:paddingBottom="@dimen/dip_8"
                    android:paddingLeft="@dimen/dip_32"
                    android:paddingRight="@dimen/dip_32"
                    android:paddingTop="@dimen/dip_8"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/f_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/coloreddd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dip_8"
                    android:layout_marginTop="@dimen/dip_16"
                    android:text="激活卡"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_jihuoma_one" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_8"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_jihuoma_two" />
                </LinearLayout>

                <EditText
                    android:id="@+id/trial_card_code_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_40"
                    android:layout_marginBottom="@dimen/dip_8"
                    android:layout_marginTop="@dimen/dip_8"
                    android:background="@drawable/shape_trial_card_r10px"
                    android:gravity="center"
                    android:hint="激活码"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_15" />


                <TextView
                    android:id="@+id/card_submit_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dip_16"
                    android:background="@drawable/shape_maincolor_r10px"
                    android:paddingBottom="@dimen/dip_8"
                    android:paddingLeft="@dimen/dip_32"
                    android:paddingRight="@dimen/dip_32"
                    android:paddingTop="@dimen/dip_8"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/f_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_16"
                    android:layout_marginTop="@dimen/dip_6"
                    android:gravity="center"
                    android:text="激活成功后可无限观看海量视频"
                    android:textColor="@color/color999"
                    android:textSize="@dimen/f_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_16"
                    android:layout_marginTop="@dimen/dip_6"
                    android:gravity="center"
                    android:text="如有疑问可拨打400-700-9987"
                    android:textColor="@color/color999"
                    android:textSize="@dimen/f_14" />

                <TextView
                    android:id="@+id/start_vip_buy_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dip_6"
                    android:text="如何成为VIP?"
                    android:background="@drawable/select_trans_bg"
                    android:textColor="@color/maincolor"
                    android:textSize="@dimen/f_16" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>