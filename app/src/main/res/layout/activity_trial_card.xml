        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dip_40"-->
        <!--android:layout_marginBottom="@dimen/dip_8"-->
        <!--android:layout_marginLeft="@dimen/dip_16"-->
        <!--android:layout_marginRight="@dimen/dip_16"-->
        <!--android:layout_marginTop="@dimen/dip_8"-->
        <!--android:background="@drawable/shape_trial_card_r10px"-->
        <!--android:cursorVisible="false"-->
        <!--android:gravity="center"-->
        <!--android:hint="请选择要激活的年级"-->
        <!--android:textColor="@color/color333"-->
        <!--android:textSize="@dimen/f_15" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_16"
        android:text="请注意有效期及点卡试用产品;"
        android:textColor="@color/color999" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_16"
        android:layout_marginTop="@dimen/dip_6"
        android:text="激活成功后可无限观看海量视频;"
        android:textColor="@color/color999" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_16"
        android:layout_marginTop="@dimen/dip_6"
        android:text="如有疑问可拨打400-700-9987;"
        android:textColor="@color/color999" />

    <Button
        android:id="@+id/card_submit_bt"
        android:layout_width="@dimen/dip_320"
        android:layout_height="@dimen/dip_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dip_22"
        android:background="@drawable/select_button_bg_maincolor"
        android:enabled="false"
        android:text="马上激活"
        android:textColor="@color/white"
        android:textSize="@dimen/f_16" />
</LinearLayout>