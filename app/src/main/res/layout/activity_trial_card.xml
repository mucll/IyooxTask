<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf7"
    android:orientation="vertical"
    tools:context=".activity.student.TrialCardActivity">

    <include layout="@layout/layout_title_bar_all" />

    <EditText
        android:id="@+id/trial_card_et"
        style="@style/person_details_layout_tv_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:layout_marginBottom="@dimen/dip_8"
        android:layout_marginLeft="@dimen/dip_16"
        android:layout_marginRight="@dimen/dip_16"
        android:layout_marginTop="@dimen/dip_8"
        android:background="@drawable/shape_trial_card_r10px"
        android:gravity="center"
        android:hint="请输入销售手机号(若有)"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_15" />

    <EditText
        android:id="@+id/trial_card_code_tv"
        style="@style/person_details_layout_tv_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:layout_marginBottom="@dimen/dip_8"
        android:layout_marginLeft="@dimen/dip_16"
        android:layout_marginRight="@dimen/dip_16"
        android:layout_marginTop="@dimen/dip_8"
        android:background="@drawable/shape_trial_card_r10px"
        android:cursorVisible="false"
        android:gravity="center"
        android:hint="激活码"
        android:textColor="@color/color333"
        android:textSize="@dimen/f_15" />

    <!--<EditText-->
