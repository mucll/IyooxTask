<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf7"
    android:orientation="vertical"
    android:padding="@dimen/dip_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dip_12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_4"
            android:drawableLeft="@drawable/stl_dtbg_icon_xxjy"
            android:drawablePadding="@dimen/dip_10"
            android:text="@string/item_answer_proposal_text"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/task_result_jianyi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dip_12"
        android:layout_marginLeft="@dimen/dip_24"
        android:layout_marginRight="@dimen/dip_24"
        android:textColor="@color/color666"
        android:textSize="@dimen/f_14" />

</LinearLayout>