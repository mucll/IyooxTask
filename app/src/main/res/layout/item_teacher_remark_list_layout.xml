<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_76"
        android:layout_margin="@dimen/dip_8"
        android:background="@drawable/select_white_r4_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dip_8">

            <ImageView
                android:layout_width="@dimen/dip_60"
                android:layout_height="@dimen/dip_60"
                android:layout_centerVertical="true"
                android:src="@drawable/comment_type_practice2" />

            <TextView
                android:id="@+id/teacher_remark_list_zhengquelv_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dip_2"
                android:textColor="@color/white"
                android:textSize="@dimen/f_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="正确率"
                android:textColor="@color/white"
                android:textSize="@dimen/f_12" />

            <TextView
                android:id="@+id/teacher_remark_list_class_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dip_4"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/f_12" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/teacher_remark_list_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_14" />

                <TextView
                    android:id="@+id/teacher_remark_list_task_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_18">

                <TextView
                    android:id="@+id/teacher_remark_list_end_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_6"
                    android:layout_marginRight="@dimen/dip_16"
                    android:textColor="@color/color999"
                    android:textSize="@dimen/f_12" />

                <TextView
                    android:id="@+id/teacher_remark_list_tijiaolv_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color999"
                    android:textSize="@dimen/f_12" />
            </LinearLayout>
        </LinearLayout>

        <!--<ImageView-->
        <!--android:layout_width="@dimen/dip_5"-->
        <!--android:layout_height="@dimen/dip_9"-->
        <!--android:layout_marginRight="@dimen/dip_8"-->
        <!--android:src="@drawable/homework_finished_forward" />-->
    </LinearLayout>
</LinearLayout>