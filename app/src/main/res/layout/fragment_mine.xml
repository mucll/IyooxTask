<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <ImageView
                android:id="@+id/headbg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/fragment_mine_bg" />

            <RelativeLayout
                android:id="@+id/mine_fragment_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <com.huisu.iyoox.views.HeadView
                        android:id="@+id/user_icon"
                        android:layout_width="@dimen/dip_71"
                        android:layout_height="@dimen/dip_71"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="16dp" />


                    <TextView
                        android:id="@+id/user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dip_4"
                        android:layout_marginTop="@dimen/dip_8"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f_16" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f_12"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_80">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:textSize="@dimen/f_15"
                android:text="我的收藏" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:textSize="@dimen/f_15"
                android:text="错题本" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:textSize="@dimen/f_15"
                android:text="15天试看" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/f_15"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:text="我的VIP" />

        </LinearLayout>

        <include
            layout="@layout/layout_mine_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_12" />

    </LinearLayout>
</ScrollView>