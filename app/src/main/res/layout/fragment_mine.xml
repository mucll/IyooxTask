<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/tab_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_24"
            android:background="@color/maincolor"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/headbg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/user_bg" />

            <RelativeLayout
                android:id="@+id/mine_fragment_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.huisu.iyoox.views.HeadView
                        android:id="@+id/user_icon"
                        android:layout_width="@dimen/dip_71"
                        android:layout_height="@dimen/dip_71"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dip_4"
                        android:layout_marginTop="@dimen/dip_8"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f_16" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f_12"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/dip_16"
            android:paddingTop="@dimen/dip_16">

            <LinearLayout
                android:id="@+id/mine_cache_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dip_4"
                android:paddingTop="@dimen/dip_4">

                <ImageView
                    android:layout_width="@dimen/dip_48"
                    android:layout_height="@dimen/dip_48"
                    android:src="@drawable/user_icon_download" />

                <TextView
                    android:id="@+id/mine_cache_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_8"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="缓存"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_collect_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dip_4"
                android:paddingTop="@dimen/dip_4">

                <ImageView
                    android:layout_width="@dimen/dip_48"
                    android:layout_height="@dimen/dip_48"
                    android:src="@drawable/user_icon_collect" />

                <TextView
                    android:id="@+id/mine_collect_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_8"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="收藏"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_purchase_history_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dip_4"
                android:paddingTop="@dimen/dip_4">

                <ImageView
                    android:layout_width="@dimen/dip_48"
                    android:layout_height="@dimen/dip_48"
                    android:src="@drawable/user_icon_buy" />

                <TextView
                    android:id="@+id/mine_purchase_history_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_8"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="购买记录"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dip_4"
                android:paddingTop="@dimen/dip_4">

                <ImageView
                    android:layout_width="@dimen/dip_48"
                    android:layout_height="@dimen/dip_48"
                    android:src="@drawable/user_icon_sy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_8"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="试用卡"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_13" />
            </LinearLayout>


        </LinearLayout>

        <include
            layout="@layout/layout_mine_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_12" />

    </LinearLayout>
</ScrollView>