<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/tab_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_24"
            android:background="@color/maincolor"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/headbg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_200_pad"
                android:scaleType="fitXY"
                android:src="@drawable/icon_mine_no_vip_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dip_12"
                android:text="个人中心"
                android:textColor="@color/white"
                android:textSize="@dimen/f_18" />

            <RelativeLayout
                android:id="@+id/mine_fragment_top_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_16"
                    android:layout_marginRight="@dimen/dip_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.huisu.iyoox.views.HeadView
                            android:id="@+id/user_icon"
                            android:layout_width="@dimen/dip_71_pad"
                            android:layout_height="@dimen/dip_71_pad" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dip_4"
                                android:layout_marginLeft="@dimen/dip_8"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="张三"
                                android:textColor="@color/white"
                                android:textSize="@dimen/f_16_pad" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dip_4"
                                android:layout_marginLeft="@dimen/dip_8"
                                android:layout_marginTop="@dimen/dip_8"
                                android:text="已高效学习5天"
                                android:textColor="@color/white"
                                android:textSize="@dimen/f_12_pad" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dip_12"
                        android:background="@color/white_76" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_vip_xueba" />

                        <TextView
                            android:id="@+id/item_learning_card_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dip_8"
                            android:text="有效期:2021.05.21"
                            android:textColor="@color/white"
                            android:textSize="@dimen/f_12_pad" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_60"
                android:layout_alignParentBottom="true"
                android:background="@color/black_12"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f_14_pad" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_4"
                        android:text="看视频数"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f_14_pad" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dip_12"
                    android:layout_marginTop="@dimen/dip_12"
                    android:background="@color/white_76" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f_14_pad" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_4"
                        android:text="做题数"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f_14_pad" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dip_12"
                    android:layout_marginTop="@dimen/dip_12"
                    android:background="@color/white_76" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f_14_pad" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_4"
                        android:text="完成作业"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f_14_pad" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dip_12"
            android:background="@color/white"
            android:paddingBottom="@dimen/dip_8"
            android:paddingTop="@dimen/dip_8">

            <LinearLayout
                android:id="@+id/mine_cache_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dip_4"
                android:paddingTop="@dimen/dip_4">

                <ImageView
                    android:layout_width="@dimen/dip_48"
                    android:layout_height="@dimen/dip_48"
                    android:src="@drawable/user_icon_download" />

                <TextView
                    android:id="@+id/mine_cache_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_4"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="缓存"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_collect_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dip_4"
                android:paddingTop="@dimen/dip_4">

                <ImageView
                    android:layout_width="@dimen/dip_48"
                    android:layout_height="@dimen/dip_48"
                    android:src="@drawable/user_icon_collect" />

                <TextView
                    android:id="@+id/mine_collect_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_4"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="收藏"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_purchase_history_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dip_4"
                android:paddingTop="@dimen/dip_4">

                <ImageView
                    android:layout_width="@dimen/dip_48"
                    android:layout_height="@dimen/dip_48"
                    android:src="@drawable/user_icon_vip" />

                <TextView
                    android:id="@+id/mine_purchase_history_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_4"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="VIP会员"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_trial_card_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dip_4"
                android:paddingTop="@dimen/dip_4">

                <ImageView
                    android:layout_width="@dimen/dip_48"
                    android:layout_height="@dimen/dip_48"
                    android:src="@drawable/user_icon_sy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_4"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="激活"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/f_13" />
            </LinearLayout>

        </LinearLayout>


        <include
            layout="@layout/layout_mine_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>